---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';

// Use Astro.glob() to fetch all posts, and then sort them by date.
const posts = (await Astro.glob('./blog/*.{md,mdx}')).sort(
	(a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			ul {
				list-style-type: none;
				padding: unset;
			}
			ul li {
				display: flex;
				font-weight: bold;
			}
			ul li time {
				font-style: italic;
				color: #222;
				font-size: small;
			}

			.blog-links_list .blog_link{
				transition: transform 100ms ease-in-out;
				display: flex;

			}

			.blog-links_list .blog_link a{
				justify-content: center;
				display:flex;
				width: 100%;
				text-decoration: none;
			}

			.blog-links_list .blog_link:hover{
				transform: scale(1.015);
			}
			
			.blog-links_list li{
				min-height: 6em;
				flex-direction: column;
				text-align: center;
				justify-content: center;
				margin-bottom: 1rem;
				border:2px solid #5ca9f2;
				background-color: #5ca9f2;
				border-radius: 18px;
			}

			.blog-links_list li p{
				color:#222;
			}

			
			.blog-links_list li a:visited {
				color: #222;
				font-weight: bold;
			}

			.blog-links_list li a:hover{
				transform: scale (1.025);
			}

			form input {
  			width: 100%;
			}

			form input[type=text] {
			width: 100%;
			padding: 12px 20px;
			margin: 8px 0;
			box-sizing: border-box;
			}

			.hidden{
				display: none;
			}

			.btn{
				width: 100%;
				padding:1rem;
				cursor: pointer;
			}

 
 .btn a:hover{
	background-color: #FF6347;
}
			
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul class='blog-links_list'>
					{posts.map((post) => (
						<li class='blog_link'>
							
							<div><a href={post.url}>{post.frontmatter.title}</a></div>

							
						</li>
					))}
				</ul>
			</section>
			<section name='form' id='form'>
						<hr />
						<h2>Request a Tech Tip</h2>
						<p>If there is a technology you would like to receive Tech Tips about, let Tom know by entering the request here in the form. </p>
						</summary>
						<form 
							name="requestTip" 
							method="POST" 
							data-netlify="true" 
							netlify-honeypot="bot-field" 
							>
							<p class="hidden">
								<label>
								  Don’t fill this out if you’re human: <input name="bot-field" />
								
							<input type="hidden" name="requestTip" value="contact">

							<p>
							  <label>Your Name: <input type="text" name="name" required/></label>
							</p>
							<!--
								<p>
							  <label>Your Email: <input type="email" name="email" /></label>
							</p>
							 -->
							
							<p>
							  <label>Message: <textarea name="message" rows="8" required></textarea></label>
							</p>
							<p>
							  <button type="submit" class='btn'>Request Tech Tip</button>
							</p>
			</form>
				
			
		</main>
		<Footer />
	</body>
</html>
